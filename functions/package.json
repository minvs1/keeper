{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "mocha": "mocha -r ts-node/register -r dotenv/config --reporter spec tests/**/*.test.ts",
    "test": "npm run build && firebase emulators:exec 'mocha -r ts-node/register -r dotenv/config --reporter spec tests/**/*.test.ts' --project keeper-658e3"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.1",
    "mocha": "^8.1.0",
    "nanoid": "^3.1.12"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "firebase-functions-test": "^0.2.0",
    "install": "^0.13.0",
    "npm": "^6.14.7",
    "ts-node": "^8.10.2",
    "tslint": "^5.12.0",
    "typescript": "^3.8.0"
  },
  "private": true
}
